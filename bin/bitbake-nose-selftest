    savimp = __builtin__.__import__

    def newimp(name, *x, **xx):
      caller = inspect.currentframe().f_back
      print "module: [%s]" % name, "caller: [%s]" % caller.f_globals.get('__name__')
      return savimp(name, *x, **xx)

    __builtin__.__import__ = newimp

